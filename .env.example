BASE_URL=http://localhost:3000

########################
# DATABASE CONFIGURATION
# (Docker service name must match docker-compose.yml)
########################
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=reliefdb

